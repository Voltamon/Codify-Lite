{
    "$schema": "https://wails.io/schemas/config.v2.json",
    "name": "codify-lite",
    "outputfilename": "codify-lite.exe",
    "build:dir": "../build",
    "frontend:dir": "../app",
    "frontend:install": "bun install --ignore-scripts || true",
    "frontend:build": "bun run build",
